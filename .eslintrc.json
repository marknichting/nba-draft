{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    // the following allows for the eslint rules for testing to only be applied to the testing files in specified folder
    "overrides": [
        {
            "files":["./client/components/__tests__/**"],
            "plugins": ["jest"],
            "extends":["plugin:jest/recommended"],
            "rules": {}
        }
    ],
    "plugins": [
        "react"
    ],
    "rules": {
    }
}
